{% extends 'base.html.twig' %}

{% block title %}Hello OrderListController!{% endblock %}

{% block body %}
    <div class="container background">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div class="container content">
                    <div class="page-header">
                        <h1>Catering</h1>
                    </div>
                    <div class="container test">
                        <div class="row table-head">
                            <div class="col-xs-1">ID</div>
                    	    <div class="col-xs-3">Nazwa</div>
                    	    <div class="col-xs-5">Skladniki</div>
                    	    <div class="col-xs-3">Cena</div>
                        </div>
                        <div id="table-items" class="order">
                        {% for order in order_list %}
                            <div class="row hover click" data-toggle="tooltip" title="cos">
                                <div id="id" class="col-xs-1">{{ order.id }}</div>
                                <div class="col-xs-3">{{ order.name }}</div>
                                <div class="col-xs-5">
                                    {% for ingredients in ingredients_list %}
                                        {% if order.id == ingredients.order_id %}
                                            <div class="col-xs-5"> {{ ingredients.name }}</div>
                                        {% endif %}
                                     {% endfor %}
                                </div>
                                <div class="col-xs-3">{{ order.prize }}</div>
                            </div>
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="myModal" class="modal fade" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Modal Title</h5>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            xDD
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            </div>
    </div>

{% endblock %}
